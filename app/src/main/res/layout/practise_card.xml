    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/info_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_practise_background_cards"
                android:scaleType="center" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/info_image"
                android:layout_toRightOf="@+id/info_image"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_text_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SubTitile"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/practise_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/container"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/twitter_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/practise_divider"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/twitter"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="title"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#808080" />


    </RelativeLayout>

