<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="center"
        android:id="@+id/introImage"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_weight="4"/>

    <com.nollpointer.dates.ui.view.DividerView
        android:layout_width="match_parent"
        android:id="@+id/introDivider"
        android:layout_height="72dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/introTitle"
            android:text="Добро пожаловать в приложение ДАТЫ"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/introDescription"
            android:paddingStart="24dp"
            android:gravity="center"
            android:paddingEnd="24dp"
            android:text="Всем привет, как дела, что ты здесь делаешь, робин я мартышка Всем привет, как дела, что ты здесь делаешь, робин я мартышка Всем привет, как дела, что ты здесь делаешь, робин я мартышка" />


    </LinearLayout>

</LinearLayout>