<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorBackgroundTest"
    android:padding="8dp"
    app:columnCount="2">

    <com.appodeal.ads.BannerView
        android:id="@+id/appodealBannerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundTest"
        android:visibility="gone"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_gravity="top"
        app:layout_row="0" />

    <TextView
        android:id="@+id/right_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundTest"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/holo_green_dark"
        app:layout_column="0"
        app:layout_gravity="start"
        app:layout_row="1" />

    <TextView
        android:id="@+id/wrong_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundTest"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/holo_red_light"
        app:layout_column="1"
        app:layout_gravity="end"
        app:layout_row="1" />

    <TextView
        android:id="@+id/test_info"
        android:background="@color/colorBackgroundTest"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/black"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_gravity="fill"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/test_Btn0"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"
        app:layout_row="3" />

    <Button
        android:id="@+id/test_Btn1"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"
        app:layout_row="4" />

    <Button
        android:id="@+id/test_Btn2"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"
        app:layout_row="5" />

    <Button
        android:id="@+id/test_Btn3"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"
        app:layout_row="6" />

    <ProgressBar
        android:id="@+id/test_progressbar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:max="20"
        android:progress="0"
        android:theme="@style/ProgressBarStyle"
        android:visibility="invisible"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal|end"
        app:layout_row="7" />

</android.support.v7.widget.GridLayout>
