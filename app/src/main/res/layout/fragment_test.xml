    <ImageButton
        android:id="@+id/test_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/practise_back_button"
        app:layout_gravity="start" />

    <ImageButton
        android:id="@+id/test_help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/practise_rating_button" />

    <TextView
        android:id="@+id/test_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/test_button_container"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/test_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/appodealBannerView"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/test_Btn0"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="123123" />

        <android.widget.Button
            android:id="@+id/test_Btn1"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="123123" />

        <android.widget.Button
            android:id="@+id/test_Btn2"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="123123" />

        <android.widget.Button
            android:id="@+id/test_Btn3"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="123123" />

    </LinearLayout>


    <com.appodeal.ads.BannerView
        android:id="@+id/appodealBannerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/test_progressbar"
        android:background="@color/colorBackgroundTest"
        android:visibility="visible" />


    <ProgressBar
        android:id="@+id/test_progressbar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:max="20"
        android:progress="0"
        android:theme="@style/ProgressBarStyle"
        android:visibility="invisible"
        app:layout_gravity="fill_horizontal|end" />

</RelativeLayout>
