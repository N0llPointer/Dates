<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dip"
        android:paddingBottom="4dp"
        tools:text="A"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorSettingsCategory"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dip"
        android:paddingTop="4dp"
        android:paddingRight="16.0dip"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="Антипартийная группа" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fontFamily="sans-serif"
        android:paddingLeft="16.0dip"
        android:paddingTop="4dp"
        android:paddingRight="16.0dip"
        android:paddingBottom="12.0dip"
        android:textColor="@android:color/black"
        android:textSize="16.0sp"
        tools:text="История область знаний, а также гуманитарная наука, занимающаяся изучением человека его деятельности, состояния, мировоззрения в прошлом времени." />

</LinearLayout>