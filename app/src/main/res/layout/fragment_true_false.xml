<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorBackgroundTest"
    app:columnCount="2">

    <ImageButton
        android:id="@+id/true_false_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/practise_back_button"
        app:layout_column="0"
        app:layout_gravity="start"
        app:layout_row="0" />

    <ImageButton
        android:id="@+id/true_false_help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/practise_rating_button"
        app:layout_column="1"
        app:layout_gravity="end"
        app:layout_row="0" />


    <!--<TextView-->
    <!--android:id="@+id/right_answers_true_false"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="@color/colorBackgroundTest"-->
    <!--android:textAppearance="?android:textAppearanceMedium"-->
    <!--android:textColor="@android:color/holo_green_dark"-->
    <!--app:layout_column="0"-->
    <!--app:layout_gravity="start"-->
    <!--app:layout_row="2" />-->

    <!--<TextView-->
    <!--android:id="@+id/wrong_answers_true_false"-->
