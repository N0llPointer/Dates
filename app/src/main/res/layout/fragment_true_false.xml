    <!--app:layout_gravity="end"-->
    <!--app:layout_row="2" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBackgroundTest"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_gravity="fill"
        app:layout_row="1"
        app:layout_rowWeight="3">

        <TextView
            android:id="@+id/test_info_true_false_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:background="@color/colorBackgroundTest"
            android:gravity="bottom|center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/test_info_true_false_event"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/colorBackgroundTest"
            android:gravity="top|center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/black"
            app:layout_columnSpan="2"
            app:layout_rowWeight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBackgroundTest"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_columnSpan="2"
        app:layout_row="2"
        app:layout_rowWeight="1">

        <android.widget.Button
            android:id="@+id/true_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorTest"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/true_button"
            android:textColor="@android:color/white"
            app:layout_gravity="start" />

        <android.widget.Button
            android:id="@+id/false_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/false_button"
            android:textColor="@android:color/white"
            app:layout_gravity="end" />

    </LinearLayout>

    <com.appodeal.ads.BannerView
        android:id="@+id/appodealBannerView_true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundTest"
        android:visibility="gone"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_gravity="bottom"
        app:layout_row="3" />

    <ProgressBar
        android:id="@+id/true_false_progressbar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:max="20"
        android:progress="0"
        android:theme="@style/ProgressBarStyle"
        android:visibility="invisible"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal|end"
        app:layout_row="4" />

</androidx.gridlayout.widget.GridLayout>
