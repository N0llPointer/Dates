            <!--                android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--                android:textColor="@color/colorSettingsCategory"-->
            <!--                android:textSize="14sp" />-->

            <TextView
                android:id="@+id/centuryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dip"
                android:paddingBottom="4dp"
                android:text="@string/information_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorSettingsCategory"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/settingsAboutApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:background="@android:color/white"
                android:drawableStart="@drawable/ic_app_info"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="16dp"
                android:text="@string/about_title"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/settingsResetTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dip"
                android:paddingBottom="4dp"
                android:text="@string/settings_reset_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorSettingsCategory"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/settingsResetSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:background="@android:color/white"
                android:drawableStart="@drawable/ic_reset"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:text="@string/settings_reset"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>