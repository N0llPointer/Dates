<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:background="#f8f7f5"
        android:gravity="start"
        android:paddingLeft="16.0dip"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="13213123213"
        android:textColor="#757472"
        android:textSize="16.0sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:paddingLeft="16.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="16.0dip">


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="1987"
            android:textAllCaps="true"
            android:textColor="#616161"
            android:textSize="32.0sp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:textColor="#616161"
            android:textSize="18.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_header"
        android:fontFamily="sans-serif"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="12.0dip"
        android:text="стория область знаний, а также гуманитарная наука, занимающаяся изучением человека его деятельности, состояния, мировоззрения в прошлом времени."
        android:textColor="@android:color/black"
        android:textSize="16.0sp" />
</RelativeLayout>


